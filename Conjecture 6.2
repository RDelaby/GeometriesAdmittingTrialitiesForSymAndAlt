/*
Probabilistic method to generate $t$-Graphs as in the conjecture. N+1 is the maximal size of one branch of the graph. In total the graph is of size 4+3n with n chosen in Random(1,N).
*/

tries := 1000;
N := 50;

for k in [1..tries] do 

n := Random(1, N);

G := Sym(4+3*n);

e := [];

r_1 := G!(1,2);
r_2 := G!(1,3);
r_3 := G!(1,4);

point := 1;

chance := 1;
for i in [0..(n-1)] do
  t := (Random(0,3)/3 lt chance) select 1 else 2;
  if (t eq 1) then
    if (point eq 1) then
    r_2 := r_2 * G!(2+3*i,5+3*i);
    r_3 := r_3 * G!(3+3*i,6+3*i);
    r_1 := r_1 * G!(4+3*i,7+3*i);
    pointtemp := 2;
    end if;
    if (point eq 2) then
    r_1 := r_1 * G!(2+3*i,5+3*i);
    r_2 := r_2 * G!(3+3*i,6+3*i);
    r_3 := r_3 * G!(4+3*i,7+3*i);
    pointtemp := 1;
    end if;
    if (point eq 3) then
    r_1 := r_1 * G!(2+3*i,5+3*i);
    r_2 := r_2 * G!(3+3*i,6+3*i);
    r_3 := r_3 * G!(4+3*i,7+3*i);
    pointtemp := 1;
    end if;
  end if;
  if (t eq 2) then
    if (point eq 1) then
    r_3 := r_3 * G!(2+3*i,5+3*i);
    r_1 := r_1 * G!(3+3*i,6+3*i);
    r_2 := r_2 * G!(4+3*i,7+3*i);
    pointtemp := 3;
    end if;
    if (point eq 2) then
    r_3 := r_3 * G!(2+3*i,5+3*i);
    r_1 := r_1 * G!(3+3*i,6+3*i);
    r_2 := r_2 * G!(4+3*i,7+3*i);
    pointtemp := 3;
    end if;
    if (point eq 3) then
    r_2 := r_2 * G!(2+3*i,5+3*i);
    r_3 := r_3 * G!(3+3*i,6+3*i);
    r_1 := r_1 * G!(4+3*i,7+3*i);
    pointtemp := 2;
    end if;
  end if;
  point := pointtemp;
end for;

W := sub<G|r_1,r_2,r_3>;
H := Alt(4+3*n);
if not(W eq G) and not(W eq H) then
  r_1;
  r_2;
  r_3;
  GroupName(W);
  GroupName(G);
end if;
end for;
